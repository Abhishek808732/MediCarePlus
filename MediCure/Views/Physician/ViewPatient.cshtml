@model  IEnumerable<MediCure.Models.PatientDetails>
@{
    ViewBag.Title = "ViewPatient";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<!--Beginning of Left Drawer Layout-->
<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar">
        <div class="custom-menu">
            <button type="button" id="sidebarCollapse" class="btn btn-primary">
            </button>
        </div>
        <div class="img bg-wrap text-center py-4" style="background-image: url(images/bg_1.jpg);">
            <div class="user-logo">
                <div class="img" style="background-image: url(images/logo.jpg);"></div>
                <h3>@ViewBag.LoggedUserName</h3>
            </div>
        </div>
        <ul class="list-unstyled components mb-5">
            <li>
                <a href="@Url.Action("Index")"><span class="fa fa-home mr-3"></span> Home</a>
            </li>
            <li>
                <a href="@Url.Action("ViewPatient")"><span class="fa fa-list mr-3"></span> View Patient</a>
            </li>
            <li>
                <a href="@Url.Action("ViewAppointment")"><span class="fa fa-list mr-3"></span> View Appointment</a>
            </li>
            <li>
                <a href="@Url.Action("Place_Order")"><span class="fa fa-home mr-3"></span> Place Order</a>
            </li>
            <li>
                <a href="@Url.Action("MessageBox")"><span class="fa fa-comments mr-3"></span> Message Box</a>
            </li>
            <li>
                <a href="@Url.Action("ChangeUserPassword")"><span class="fa fa-cogs mr-3"></span> Change Password</a>
            </li>
            <li>
                <a href="@Url.Action("UserLogout")"><span class="fa fa-sign-out mr-3"></span>Sign Out</a>
            </li>
        </ul>

    </nav>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">

        <!--BODY-->

        <h2>Patients Information</h2>
        @using (Html.BeginForm("SearchPatient", "Physician", FormMethod.Post))
        {
            <input type="text" name="search" />
            <input type="submit" value="Search" />
            <br />
            <br />
            <div>
                <table class="table table-bordered table-hover" border="1">
                    <tr>
                        <th>Patient Id</th>
                        <th>Patient Name</th>
                        <th>Contact No</th>
                        <th>Patient Address</th>
                        <th>Gender</th>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LoginID</td>
                                <td>@item.UserName</td>
                                <td>@item.Contact</td>
                                <td>@item.Address</td>
                                <td>@item.Gender</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7"> No record found</td>
                        </tr>
                    }
                </table>
            </div>
        }
        <!--BODY END-->
    </div>
    <!---->
</div>
<!--End of Right Drawer Layout-->