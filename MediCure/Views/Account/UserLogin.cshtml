@model MediCure.Models.LoginModel
@{
    ViewBag.Title = "UserLogin";
}
<!-- Breadcrumbs -->
<!-- Login Form -->

<div>
    <div class="container-login100-form-btn"  >
        <div class="wrap-login100" style="background-color:lightcoral">
            <div class="login100-pic js-tilt" data-tilt >
                <img src="~/images/img-02.png" alt="IMG"  height="250" style="border-radius:25px">
            </div>
        @using (Html.BeginForm("UserLogin","Account",FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <form class="login100-form validate-form" >
                <span class="login100-form-title" style="color:white">
                    <h2> MediCare+  Login</h2>
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <!--input class="input100" type="text" name="email" placeholder="Email"-->
                    @Html.TextBoxFor(a=>a.EmailID, new { @class= "input100", placeholder="Email"})
                    @Html.ValidationMessageFor(a=>a.EmailID, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <!--input class="input100" type="password" name="pass" placeholder="Password"-->
                    @Html.PasswordFor(a => a.Password, new { @class = "input100", type = "password", placeholder = "Password" })
                    @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="text-danger">
                    @ViewBag.ErrorMessage
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        Login
                    </button>
                </div>

                <!--div class="text-center p-t-12">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="#">
                        Username / Password?
                    </a>
                </div-->
            </form>
        }
        </div>
    </div>
    <br />
    <div>
        <img src="~/images/loginpage.PNG" style="object-fit:cover" />
    </div>
</div>

<!-- End of Login Form -->
